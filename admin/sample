<?php
session_start();
require_once '../config.php';

// Handle logout
if (isset($_POST['logout'])) {
    session_unset(); // Unset all session variables
    session_destroy(); // Destroy the session
    header("Location: ../login.php"); // Redirect to login page
    exit;
}

// Check if user is logged in as admin
if (!isset($_SESSION['loggedin']) || $_SESSION['loggedin'] !== true || $_SESSION['user_type'] !== 'admin') {
    header("Location: ../login.php");
    exit;
}

// Get user info
$user_id = $_SESSION['user_id'];
$stmt = $conn->prepare("SELECT username, email, phone, address_line1, city, state, postal_code, password, profile_image FROM users WHERE id = ?");
$stmt->bind_param("i", $user_id);
$stmt->execute();
$result = $stmt->get_result();
$user = $result->fetch_assoc();

// Fix the profile image path
$profile_image = "../uploads/profilephoto/default-avatar.png"; // Default image
if (!empty($user['profile_image'])) {
    // Check if the profile_image already contains the full path
    if (strpos($user['profile_image'], 'uploads/profilephoto/') !== false) {
        $profile_image = "../" . $user['profile_image'];
    } else {
        // If it only contains the filename
        $profile_image = "../uploads/profilephoto/" . $user['profile_image'];
    }
    
    // Verify the file exists
    if (!file_exists($profile_image)) {
        $profile_image = "../uploads/profilephoto/default-avatar.png"; // Fallback to default if file doesn't exist
    }
}

// Handle profile update form submission
$update_message = '';
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['update_profile'])) {
    $username = trim($_POST['username']);
    $email = trim($_POST['email']);
    $phone = trim($_POST['phone']);
    $address_line1 = trim($_POST['address_line1']);
    $city = trim($_POST['city']);
    $state = trim($_POST['state']);
    $postal_code = trim($_POST['postal_code']);
    $new_password = trim($_POST['new_password']);
    $confirm_password = trim($_POST['confirm_password']);
    
    // Begin with basic validation
    if (empty($username) || empty($email)) {
        $update_message = '<div class="alert alert-danger">Username and email are required fields.</div>';
    } else {
        // Handle file upload if a new image is provided
        $new_image_path = $user['profile_image']; // Keep existing image by default
        
        if (isset($_FILES['profile_image']) && $_FILES['profile_image']['error'] === 0) {
            $upload_dir = "../uploads/profilephoto/";
            $file_extension = strtolower(pathinfo($_FILES['profile_image']['name'], PATHINFO_EXTENSION));
            $allowed_extensions = ['jpg', 'jpeg', 'png', 'gif'];
            
            // Validate file extension
            if (in_array($file_extension, $allowed_extensions)) {
                $new_image_name = uniqid('profile_') . '.' . $file_extension;
                $upload_path = $upload_dir . $new_image_name;
                
                if (move_uploaded_file($_FILES['profile_image']['tmp_name'], $upload_path)) {
                    $new_image_path = "uploads/profilephoto/" . $new_image_name;
                } else {
                    $update_message = '<div class="alert alert-danger">Failed to upload image. Please try again.</div>';
                }
            } else {
                $update_message = '<div class="alert alert-danger">Invalid file type. Allowed types: JPG, JPEG, PNG, GIF.</div>';
            }
        }
        
        // Handle password update if provided
        if (!empty($new_password)) {
            if ($new_password !== $confirm_password) {
                $update_message = '<div class="alert alert-danger">Passwords do not match.</div>';
            } else if (strlen($new_password) < 6) {
                $update_message = '<div class="alert alert-danger">Password must be at least 6 characters long.</div>';
            } else {
                // Hash the new password
                $hashed_password = password_hash($new_password, PASSWORD_DEFAULT);
                
                // Update user details with new password
                $update_stmt = $conn->prepare("UPDATE users SET username = ?, email = ?, phone = ?, address_line1 = ?, city = ?, state = ?, postal_code = ?, profile_image = ?, password = ? WHERE id = ?");
                $update_stmt->bind_param("sssssssssi", $username, $email, $phone, $address_line1, $city, $state, $postal_code, $new_image_path, $hashed_password, $user_id);
            }
        } else {
            // Update user details without changing password
            $update_stmt = $conn->prepare("UPDATE users SET username = ?, email = ?, phone = ?, address_line1 = ?, city = ?, state = ?, postal_code = ?, profile_image = ? WHERE id = ?");
            $update_stmt->bind_param("ssssssssi", $username, $email, $phone, $address_line1, $city, $state, $postal_code, $new_image_path, $user_id);
        }
        
        // Only proceed with database update if there were no errors
        if (empty($update_message)) {
            if ($update_stmt->execute()) {
                // Update session username if it was changed
                $_SESSION['username'] = $username;
                
                // Refresh user data after update
                $stmt->execute();
                $result = $stmt->get_result();
                $user = $result->fetch_assoc();
                
                // Update profile image path with the new one
                if (!empty($user['profile_image'])) {
                    if (strpos($user['profile_image'], 'uploads/profilephoto/') !== false) {
                        $profile_image = "../" . $user['profile_image'];
                    } else {
                        $profile_image = "../uploads/profilephoto/" . $user['profile_image'];
                    }
                }
                
                $update_message = '<div class="alert alert-success">Profile updated successfully!</div>';
            } else {
                $update_message = '<div class="alert alert-danger">Error updating profile: ' . $conn->error . '</div>';
            }
        }
    }
}

// Get the current page for active menu highlighting
$current_page = basename($_SERVER['PHP_SELF']);
